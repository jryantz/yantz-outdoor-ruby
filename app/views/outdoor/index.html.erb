<% content_for :title, "Yantz Outdoor Collection" %>

<% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
<% end %>

<section class="call cf">
    <div class="call-header">
        <h2 class="light">Yantz Outdoor Collection</h2>
        <h3 class="light" style="margin-top: 15px;">it's all about the location</h3>
    </div>
</section>

<section class="announcement center">
    <div class="grid-fixed">
        <div class="c12 cf">
            <h4>
                <a href="/places">Manage Places</a> |
                <a href="https://yantz-outdoor-python.herokuapp.com/">About</a>
            </h4>
        </div>
    </div>
</section>

<section class="places cf">
    <div class="grid-fixed">
        <div class="c12 cf" style="margin-bottom: 25px; text-align: right;">
            <div style="float: left;">Sort by: </div>
            <a href="/">Location Ascending</a> |
            <a href="/outdoor/index?order=reverse">Location Descending</a> |
            <a href="/outdoor/index?order=alpha">Title Ascending</a> |
            <a href="/outdoor/index?order=revalpha">Title Descending</a>
        </div>

        <% @places.each do |place| %>
            <%= link_to "/places/#{place.id}" do %>
                <div class="c4 cf hover-change">
                    <%= image_tag place.image, :height => '200px', :width => '100%', :alt => 'location_image' %>
                    <h4><%= place.title %></h4>
                    <h5><%= place.city %>, <%= place.state %></h5>
                </div>
            <% end %>
        <% end %>
    </div>
</section>

<section class="footer cf">
    <div class="grid-fixed">
        <p class="c6">By Jonathan Yantz</p>
        <p class="c6" style="text-align: right;">
            <a href="https://yantz-outdoor-phpjs.herokuapp.com/">Contact</a> |
            <a href="https://yantz-outdoor-python.herokuapp.com/">About</a>
        </p>
    </div>
</section>
